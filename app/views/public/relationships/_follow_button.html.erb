<% if current_user.following?(user) %>
  <%= link_to "フォローを外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-danger btn-block" %>
<% else %>
  <%= link_to "フォロー",  user_relationships_path(user), method: :post, remote: true, class: "btn btn-primary btn-block" %>
<% end %>