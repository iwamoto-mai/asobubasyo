<%= form_with model: spot do |f| %>
  <%= render "layouts/error_messages", model: f.object %>

  <div class="mb-2">
    <%= f.label :name, "施設名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.label :content, "コメント" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= label_tag :zipcode, "郵便番号" %>
    <%= text_field_tag :zipcode, nil, class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.label :address, "県" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= f.label :weather, "天気" %>
    <%= f.select :weather, Spot.weathers_i18n.invert, {}, { class: "form-control" } %>
  </div>

  <%= f.submit "投稿", class: "btn btn-primary btn-block" %>
<% end %>