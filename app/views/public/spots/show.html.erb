<h1>Spot</h1>
<div class="row">
  <div class="col-md-5">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>name</th>
          <td><%= @spot.name %></td>
        </tr>
        <tr>
          <th>content</th>
          <td><%= @spot.content %></td>
        </tr>
        <tr>
          <th>address</th>
          <td><%= @spot.address %></td>
        </tr>
        <tr>
          <th>weather</th>
          <td><%= @spot.weather_i18n %></td>
        </tr>       
      </tbody>
    </table>
    <div id="favorite__spot-<%= @spot.id %>">
      <%= render "public/favorites/favorite_button", spot: @spot %>
    </div>
  </div>
  <div class="col-md-7">
    <div id="map" data-spot=<%= @spot.id %>></div>
  </div>
</div>

<%= link_to "top", root_path, class: "btn btn-primary", data: { turbolinks: false } %>

<%= javascript_pack_tag 'map_show', 'data-turbolinks-track': 'reload' %>