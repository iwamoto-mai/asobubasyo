<div class="row">
  <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2">
    <h1 class="my-4">ユーザー名変更</h1>
    <%= form_with model: @user do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
    
      <div class="mb-2">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    
      <div class="mb-2">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      
      <div class="mb-2">
        <%= f.label :password_confirmation, "パスワード再入力" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      
      <div class="my-4">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    
    <%= link_to "削除", user_path(@user), method: :delete, data: { confirm: "reary?" }, class: "btn btn-danger btn-block" %>
  </div>
</div>