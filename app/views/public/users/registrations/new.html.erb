<div class="row mt-5">
  <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2">
    <div class="card">
      <div class="card-body">
        <h2>新規登録</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/users/shared/error_messages", resource: resource %>
        
          <div class="firld mb-2">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "名前", class: "form-control" %>
          </div>
        
          <div class="field mb-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "Eメール", class: "form-control" %>
          </div>
        
          <div class="field mb-2">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "新しいパスワード", class: "form-control" %>
          </div>
        
          <div class="field mb-2">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード", class: "form-control" %>
          </div>
        
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        
        <%= render "public/users/shared/links" %>
      </div>
    </div>
  </div>
</div>