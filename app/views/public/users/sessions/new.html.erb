<div class="row mt-5">
  <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2">
    <div class="card">
      <div class="card-body">
        <h2>ログイン</h2>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mb-2">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "Eメール", class: "form-control" %>
          </div>
        
          <div class="field mb-2">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "現在のパスワード", class: "form-control" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="fieldmb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        
        <%= render "public/users/shared/links" %>
      </div>
    </div>
  </div>
</div>
