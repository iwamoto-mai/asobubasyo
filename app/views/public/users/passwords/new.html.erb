<h2>パスワードを忘れた場合</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "public/users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Eメール" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードのリセットを送信する" %>
  </div>
<% end %>

<%= render "public/users/shared/links" %>
