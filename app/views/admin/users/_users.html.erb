<table class="table table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>ユーザー名</th>
      <th>Eメール</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "reary?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>