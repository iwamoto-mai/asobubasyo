<%= form_with url: admin_spots_, method: :get do |f| %>
  <div class="d-flex my-2">
    <%= f.search_field :keyword, value: params[:keyword], placeholder: "キーワード検索", class: "form-control w-50 mr-2" %>
    <%= f.select :weather, Spot.weathers_i18n.invert, { include_blank: "--天候--", selected: params[:weather] }, { class: "form-control w-25 mx-2" } %>
    <%= f.submit "検索", class: "btn btn-primary w-25 ml-2" %>
  </div>
<% end %>